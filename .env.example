# App Configuration
NEXT_PUBLIC_PROJECT_NAME="Find X Friends"
NEXT_PUBLIC_URL=https://your-app.vercel.app

# Feature Flags
NEXT_PUBLIC_ENABLE_PAYMENTS=false  # Set to 'true' to enable paid mode

# NextAuth.js
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl

# Twitter OAuth (https://developer.twitter.com/)
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# Neynar API (https://neynar.com/)
NEYNAR_API_KEY=your_neynar_api_key_here

# RapidAPI for Twitter (https://rapidapi.com/)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=twitter-api45.p.rapidapi.com

# Upstash Redis (https://upstash.com/)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Payment Mode (Optional - only needed if NEXT_PUBLIC_ENABLE_PAYMENTS=true)
NEXT_PUBLIC_CDP_API_KEY=your_coinbase_api_key_here
NEXT_PUBLIC_CONTRACT_ADDRESS=your_deployed_contract_address_here
NEXT_PUBLIC_PAYMENT_AMOUNT=1000000  # $1 USDC (6 decimals)
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913  # USDC on Base
NEXT_PUBLIC_CHAIN_ID=8453  # Base Mainnet
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org
